			<color>${themecolor}</color>
		</carousel>

		<text name="systemInfo">
			<color>ffffff</color>
			<backgroundColor>000000a0</backgroundColor>
			<fontPath>./art/nintendo-nes-font.ttf</fontPath>
		</text>

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/box.png</path>
			<color>808080</color>
		</image>

		<image name="logo">
			<path>./${system.theme}/system.svg</path>
		</image>
		<text name="logoText">
	            <fontPath>./art/nintendo-nes-font.ttf</fontPath>
	            <color>000000</color>
	            <forceUppercase>true</forceUppercase>
	        </text>     

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>
		
